# galigo-testbot configuration
# Copy this file to .env and fill in your values
# The .env file is ignored by git

# Required
TESTBOT_TOKEN=123456:ABC-DEF-your-bot-token
TESTBOT_CHAT_ID=123456789
TESTBOT_ADMINS=123456789,987654321

# Optional - General
TESTBOT_MODE=polling
TESTBOT_STORAGE_DIR=./var
TESTBOT_LOG_LEVEL=info

# Safety Limits
TESTBOT_MAX_MESSAGES_PER_RUN=40
TESTBOT_SEND_INTERVAL=1200ms
TESTBOT_ALLOW_STRESS=false

# Webhook (for future use)
# TESTBOT_WEBHOOK_PUBLIC_URL=https://your-domain.com/webhook
# TESTBOT_WEBHOOK_SECRET_TOKEN=your-secret
# TESTBOT_LISTEN_ADDR=:8080
